<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="mb-3">
    <%= form.label :name, "ニックネーム", class: "block text-lg font-medium text-gray-700 font-bold" %>
    <%= form.text_field :name, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm text-lg border-gray-300 rounded-md outline outline-offset-2 outline-blue-500/50 py-2 px-4" %>
  </div>
  <div class="mb-3">
    <%= form.label :email, "メールアドレス", class: "block text-lg font-medium text-gray-700 font-bold" %>
    <%= form.email_field :email, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm text-lg border-gray-300 rounded-md outline outline-offset-2 outline-blue-500/50 py-2 px-4" %>
  </div>
  <div class="mb-3">
    <%= form.label :password, "パスワード", class: "block text-lg font-medium text-gray-700 font-bold" %>
    <%= form.password_field :password, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm text-lg border-gray-300 rounded-md outline outline-offset-2 outline-blue-500/50 py-2 px-4" %>
  </div>
  <div class="mb-3">
    <%= form.label :password_confirmation, "パスワード確認", class: "block text-lg font-medium text-gray-700 font-bold" %>
    <%= form.password_field :password_confirmation, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm text-lg border-gray-300 rounded-md outline outline-offset-2 outline-blue-500/50 py-2 px-4" %>
  <div class="mb-3 mt-5 flex justify-center">
    <%= form.submit "更新", class: "btn btn-outline btn-neutral text-gray-700 hover:text-gray-100 mt-4 mb-10 ml-5" %>
    <%= button_to "アカウント削除", @user, method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-outline btn-neutral text-gray-700 hover:text-gray-100 mt-4 mb-10 ml-5" %>
  </div>
<% end %>
