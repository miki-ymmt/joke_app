<div class="container mx-auto p-4">
  <h1 class="text-3xl font-bold mb-4">小話の詳細</h1>
  <%= render @joke %>
  <div class="mt-4">
    <%= form_with model: @joke, url: joke_path(@joke), method: :patch, local: true do |form| %>
      <div class="mb-4">
        <%= form.label :title, "タイトルをつけてな～" %>
        <br>
        <%= form.text_field :title, class: "input input-bordered w-full max-w-xs" %>
      </div>
      <div>
        <%= form.submit "タイトルを保存する", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
  <div class="mt-4">
    <%= link_to '他の小話も見る', jokes_path, class: 'btn btn-secondary' %>
  </div>
</div>
