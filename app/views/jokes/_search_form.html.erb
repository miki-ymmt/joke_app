<%= search_form_for @q, url: url do |form| %>
  <div class="flex justify-center items-center h-32">
    <div class="flex space-x-2 bg-white bg-opacity-75 rounded-lg">
      <%= form.search_field :title_or_content_or_theme_cont, placeholder: "気になるワードを入れてや！", class: "form-control px-4 py-2 rounded-lg focus:outline-none border-double border-4 border-indigo-600 text-lg w-80" %>
      <%= form.submit "検索", class: "btn btn-outline btn-neutral text-gray-700 hover:text-gray-100 rounded-r-lg px-4 py-2" %>
    </div>
  </div>
<% end %>