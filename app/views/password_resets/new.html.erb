<div class="flex justify-center items-center min-h-screen">
  <div class="w-full max-w-md">
    <h1 class="text-3xl font-bold mb-10 text-center">パスワードリセット</h1>
    <%= form_with model: @user, url: password_resets_path, local: true do |form| %>
      <div class="mb-3">
        <%= form.label :email, "メールアドレス", class: "block text-lg font-medium text-gray-700 font-bold" %>
        <%= form.email_field :email, placeholder: "メールアドレスを入力してください", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm text-lg border-gray-300 rounded-md outline outline-offset-2 outline-blue-500/50 py-2 px-4" %>
      </div>
      <div class="flex justify-center items-center">
      <%= form.submit "送信", class: "btn btn-outline btn-neutral text-gray-700 hover:text- mt-4 mb-10 ml-5", data: { disable_with: "送信" } %>
      </div>
    <% end %>
  </div>
</div>